<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="info.hildegynoid.transaction.ui.Controller">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <HBox prefHeight="27.0" prefWidth="560.0">
            <children>
               <Label prefHeight="27.0" prefWidth="100.0" text="Username" />
         
                  <TextField fx:id="username" />
            </children>
         </HBox>
         <HBox layoutX="30.0" layoutY="30.0" prefHeight="27.0" prefWidth="560.0">
            <children>
               <Label prefHeight="27.0" prefWidth="100.0" text="Password" />
               <PasswordField fx:id="password" />
            </children>
            <VBox.margin>
               <Insets top="8.0" />
            </VBox.margin>
         </HBox>
         <HBox alignment="TOP_RIGHT" prefHeight="49.0" prefWidth="560.0">
            <children>
               <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#loginButtonOnClick" text="Login" />
               <Button fx:id="downloadButton" disable="true" mnemonicParsing="false" onAction="#downloadButtonOnClick" text="Download">
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin>
               </Button>
            </children>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </HBox>
         <Label fx:id="status" />
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
